<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/news_appbar"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/result_collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/colorPrimary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/result_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="24dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <RelativeLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/result_image1"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/result_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="无结果"
                        android:layout_below="@+id/result_image1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

                    <TextView
                        android:id="@+id/result_percent1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/result_title1"
                        android:layout_below="@+id/result_image1"
                        android:text="无"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginLeft="16dp"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/result_content1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="无内容"
                        android:layout_below="@+id/result_title1"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <RelativeLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/result_image2"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/result_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="无结果"
                        android:layout_below="@+id/result_image2"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

                    <TextView
                        android:id="@+id/result_percent2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/result_title2"
                        android:text="无"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginLeft="16dp"
                        android:layout_below="@+id/result_image2"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/result_content2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="无内容"
                        android:layout_below="@+id/result_title2"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <RelativeLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/result_image3"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/result_title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="无结果"
                        android:layout_below="@id/result_image3"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

                    <TextView
                        android:id="@+id/result_percent3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/result_title3"
                        android:text="无"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginLeft="16dp"
                        android:layout_below="@id/result_image3"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/result_content3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="无内容"
                        android:layout_below="@+id/result_title3"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/disease1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <RelativeLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/disease_image1"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_marginBottom="10dp"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/disease_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="无结果"
                        android:layout_below="@+id/disease_image1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

                    <TextView
                        android:id="@+id/disease_percent1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/disease_title1"
                        android:text="无"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_below="@+id/disease_image1"
                        android:layout_marginLeft="16dp"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/disease_content1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="无内容"
                        android:layout_below="@+id/disease_title1"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/disease2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <RelativeLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/disease_image2"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_marginBottom="10dp"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/disease_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="无结果"
                        android:layout_below="@+id/disease_image2"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

                    <TextView
                        android:id="@+id/disease_percent2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/disease_title2"
                        android:text="无"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginLeft="16dp"
                        android:layout_below="@+id/disease_image2"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/disease_content2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="无内容"
                        android:layout_below="@+id/disease_title2"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/disease3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <RelativeLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/disease_image3"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_marginBottom="10dp"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/disease_title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="无结果"
                        android:layout_below="@+id/disease_image3"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

                    <TextView
                        android:id="@+id/disease_percent3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/disease_title3"
                        android:text="无"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginLeft="16dp"
                        android:layout_below="@+id/disease_image3"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/disease_content3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="无内容"
                        android:layout_below="@+id/disease_title3"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/speech_outer"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_anchor="@id/news_appbar"
        app:layout_anchorGravity="bottom|right|end"
        android:src="@drawable/ic_change"
        android:layout_margin="56sp"
        android:clickable="true"/>

</android.support.design.widget.CoordinatorLayout>